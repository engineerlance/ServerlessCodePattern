{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "lib": [
          "es2018"
        ],
        "module": "ES6",
        "moduleResolution": "node",
        "target": "es2018",
        "allowJs": true,
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": "./"
      },
    "include": ["src"],
    "exclude": ["node_modules"]
}
